<Window x:Class="AbfDB.Monitor.Views.MonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbfDB.Monitor.Views"
        mc:Ignorable="d"
        Title="AbfDB Filesystem Monitor" Height="300" Width="500">
    <DockPanel Margin="5">
        <GroupBox DockPanel.Dock="Top" Header="Watch Folder" Margin="0 0 0 5">
            <Label Content="{Binding Path}" />
        </GroupBox>

        <GroupBox DockPanel.Dock="Top" Header="Database File" Margin="0 0 0 5">
            <Label DockPanel.Dock="Top" Content="{Binding DatabaseFile}" />
        </GroupBox>

        <GroupBox DockPanel.Dock="Top" Header="Tracked Files">
            <DataGrid x:Name="DataGrid1"
                  DockPanel.Dock="Bottom"
                  ItemsSource="{Binding AbfFiles}" 
                  AlternatingRowBackground="#F6F6F6" 
                  AlternationCount="2"
                  HeadersVisibility="Column" 
                  HorizontalGridLinesBrush="#DDDDDD" 
                  VerticalGridLinesBrush="#DDDDDD"
                  IsReadOnly="True"
                  />
        </GroupBox>
    </DockPanel>
</Window>
